<?xml version="1.0" encoding="utf-8"?>
 <selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:padding="10dp">
            <solid android:color="@color/light_gray" /> <!-- this one is ths color of the Rounded Button -->
            <corners
                android:radius="10dp"/>
            <stroke android:width="1dip" android:color="#3d4f63" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:padding="10dp">
            <solid android:color="@color/light_gray" /> <!-- this one is ths color of the Rounded Button -->
            <corners
                android:radius="7dp"/>
            <stroke android:width="1dip" android:color="#3d4f63" />
        </shape>
    </item>

    <item android:state_focused="false" >
        <shape android:padding="10dp">
            <solid android:color="#ffffff" /> <!-- this one is ths color of the Rounded Button -->
            <corners
                android:radius="7dp"/>
            <stroke android:width="1dip" android:color="#3d4f63" />
        </shape>
    </item>

    <item android:state_pressed="false" >
        <shape android:padding="10dp">
            <solid android:color="#ffffff" /> <!-- this one is ths color of the Rounded Button -->
            <corners
                android:radius="7dp"/>
            <stroke android:width="1dip" android:color="#3d4f63" />
        </shape>
    </item>
</selector>


